extends layout

block content
  h1= title
  div.searchmenu
    a.button(href="/books/new") Create New Book
    form(action="/search", method="GET").searchform
      button(type='submit').searchbtn Search
      input#term(name='term' type='text')
  br
  br
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        book
          tr
            td
              a(href=`/books/${book.id}`) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}