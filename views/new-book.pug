extends layout

block content
    div.form-page
        h1 New Book
        if(errors)
            h2.error Oops an error occurred!
            ul.error
                each error in errors
                    li
                        =error.message

        form(action="/books/new", method="post")
            include form
            div.form-offset
                p
                    input(type='submit' value='Create New Book')
                p
                    a.button(href='/books') Cancel